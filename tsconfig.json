{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src", "lib"],
  "ts-node": {
    "swc": true,
    "esm": true,
    "files": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "types": [
        "node"
      ]
    }
  }
}
